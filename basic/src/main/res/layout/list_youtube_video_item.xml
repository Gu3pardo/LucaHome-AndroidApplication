<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/cardview_shadow_start_color"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:background="@color/cardview_light_background"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:padding="2dp">

            <ImageView
                android:id="@+id/youtube_video_image"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:contentDescription="@string/contentDescription"
                android:focusable="true"
                app:srcCompat="@drawable/youtube_icon" />

            <TextView
                android:id="@+id/youtube_video_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/youtube_video_image"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@+id/youtube_video_description"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/example"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/SecondaryText" />

            <TextView
                android:id="@+id/youtube_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/youtube_video_image"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/example"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/PrimaryText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/youtube_video_description"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/youtube_video_title"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/youtube_video_image"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/example"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/PrimaryText" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>