<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DarkPrimary"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:gravity="start"
                android:text="Select the server IP"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/TextIcon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@color/TextIcon" />

            <Spinner
                android:id="@+id/selectServerSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/DarkPrimary"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Control buttons"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/TextIcon"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="@color/TextIcon" />

            <Button
                android:id="@+id/buttonUp"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_blank"
                android:text="Up"
                android:textColor="@color/TextIcon"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonLeft"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Left"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonRight"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Right"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonDown"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_blank"
                android:text="Down"
                android:textColor="@color/TextIcon"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonRotate"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_blank"
                android:text="Rotate"
                android:textColor="@color/TextIcon"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/DarkPrimary"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Select a game"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/TextIcon"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="@color/TextIcon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Pong"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/TextIcon" />

            <Spinner
                android:id="@+id/selectPongPlayerSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonPongPlay"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Play"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonPongRestart"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Restart"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonPongStop"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Stop"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonPongPause"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Pause"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonPongResume"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Resume"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/TextIcon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Snake"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/TextIcon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonSnakePlay"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Play"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonSnakeStop"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Stop"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/TextIcon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Tetris"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/TextIcon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonTetrisPlay"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Play"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonTetrisStop"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_blank"
                    android:text="Stop"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/TextIcon" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>