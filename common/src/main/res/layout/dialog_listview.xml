<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_start_color"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/cardview_light_background"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialog_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/example"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/PrimaryText"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/dialog_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:textColor="@color/PrimaryText"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dialog_list_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/dialog_title_text_view"
                android:layout_margin="3dp"
                android:background="@color/SecondaryText" />

            <ListView
                android:id="@+id/dialog_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dialog_button_close"
                android:layout_below="@+id/dialog_list_separator"
                android:layout_margin="10dp"
                android:textColor="@color/PrimaryText" />

            <com.rey.material.widget.Button
                android:id="@+id/dialog_button_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/close"
                android:textColor="@color/PrimaryText"
                android:textStyle="bold"
                app:rd_delayClick="none"
                app:rd_enable="true"
                app:rd_rippleColor="@color/colorPrimary"
                app:rd_rippleType="touch" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>