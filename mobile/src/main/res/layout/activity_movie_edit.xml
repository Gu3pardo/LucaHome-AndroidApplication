<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="guepardoapps.lucahome.views.MovieEditActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            card_view:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:padding="5dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/movieTitle_TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <AutoCompleteTextView
                        android:id="@+id/movie_edit_title_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_movie_title"
                        android:inputType="textAutoComplete"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/movie_edit_genre_textview"
                        android:nextFocusRight="@+id/movie_edit_genre_textview"
                        android:textColor="@color/Black" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/movieGenre_TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_below="@+id/movieTitle_TextInputLayout">

                    <AutoCompleteTextView
                        android:id="@+id/movie_edit_genre_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_movie_genre"
                        android:inputType="textAutoComplete"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/movie_edit_description_textview"
                        android:nextFocusRight="@+id/movie_edit_description_textview"
                        android:textColor="@color/Black" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/movieDescription_TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_below="@+id/movieGenre_TextInputLayout">

                    <AutoCompleteTextView
                        android:id="@+id/movie_edit_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_movie_description"
                        android:inputType="textAutoComplete"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/movieRating_Bar"
                        android:nextFocusRight="@+id/movieRating_Bar"
                        android:textColor="@color/Black" />

                </android.support.design.widget.TextInputLayout>

                <RatingBar
                    android:id="@+id/movieRating_Bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movieDescription_TextInputLayout"
                    android:layout_centerHorizontal="true"
                    android:max="5"
                    android:nextFocusDown="@+id/save_movie_edit_button"
                    android:nextFocusRight="@+id/save_movie_edit_button"
                    android:rating="0" />

                <com.rey.material.widget.Button
                    android:id="@+id/save_movie_edit_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="16dp"
                    android:text="@string/save"
                    android:textColor="@color/colorTextIcon"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_movie_edit"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
