<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:background="@color/cardview_shadow_start_color"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:background="@color/cardview_light_background"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/scheduleCardTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/example"
                    android:textColor="@color/TextIcon"
                    android:textSize="16sp" />

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/scheduleDateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/example"
                        app:layout_heightPercent="20%"
                        app:layout_widthPercent="100%" />

                    <TextView
                        android:id="@+id/scheduleTimeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scheduleDateText"
                        android:gravity="center"
                        android:text="@string/example"
                        app:layout_heightPercent="20%"
                        app:layout_widthPercent="100%" />

                    <TextView
                        android:id="@+id/scheduleSocketText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scheduleTimeText"
                        android:gravity="center"
                        android:text="@string/example"
                        app:layout_heightPercent="20%"
                        app:layout_widthPercent="100%" />

                    <TextView
                        android:id="@+id/scheduleSocketActionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scheduleSocketText"
                        android:gravity="center"
                        android:text="@string/example"
                        app:layout_heightPercent="20%"
                        app:layout_widthPercent="100%" />

                    <Switch
                        android:id="@+id/scheduleCardSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scheduleSocketActionText"
                        android:gravity="center"
                        android:textOff="@string/socketDisabled"
                        android:textOn="@string/socketEnabled"
                        app:layout_heightPercent="20%"
                        app:layout_widthPercent="100%" />
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/schedule_card_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:contentDescription="@string/contentDescription"
                app:srcCompat="@mipmap/ic_schedule_white_48dp" />

            <com.rey.material.widget.FloatingActionButton
                android:id="@+id/schedule_card_update_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@+id/schedule_card_delete_button"
                app:fab_iconSize="30dp"
                app:fab_iconSrc="@android:drawable/ic_menu_preferences"
                app:fab_radius="17dp"
                app:rd_delayClick="none"
                app:rd_enable="true"
                app:rd_rippleColor="@color/colorPrimary"
                app:rd_rippleType="touch" />

            <com.rey.material.widget.FloatingActionButton
                android:id="@+id/schedule_card_delete_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                app:fab_iconSize="30dp"
                app:fab_iconSrc="@android:drawable/ic_menu_delete"
                app:fab_radius="17dp"
                app:rd_delayClick="none"
                app:rd_enable="true"
                app:rd_rippleColor="@color/colorPrimary"
                app:rd_rippleType="touch" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>