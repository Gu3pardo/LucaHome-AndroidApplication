<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="guepardoapps.lucahome.views.BixbyEditActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_shadow_end_color"
        android:theme="@style/AppTheme.AppBarOverlay">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="@string/bixby_create_action"
                                android:textColor="@color/PrimaryText" />

                            <Spinner
                                android:id="@+id/bixby_edit_action_type_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <Spinner
                                android:id="@+id/bixby_edit_application_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <android.support.percent.PercentRelativeLayout
                                android:id="@+id/bixby_edit_network_relative_layout"
                                android:layout_width="match_parent"
                                android:layout_height="35dp">

                                <Spinner
                                    android:id="@+id/bixby_edit_network_type_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_heightPercent="100%"
                                    app:layout_widthPercent="50%" />

                                <Spinner
                                    android:id="@+id/bixby_edit_network_action_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/bixby_edit_network_type_spinner"
                                    app:layout_heightPercent="100%"
                                    app:layout_widthPercent="50%" />
                            </android.support.percent.PercentRelativeLayout>

                            <android.support.percent.PercentRelativeLayout
                                android:id="@+id/bixby_edit_wireless_socket_relative_layout"
                                android:layout_width="match_parent"
                                android:layout_height="35dp">

                                <Spinner
                                    android:id="@+id/bixby_edit_wireless_socket_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_heightPercent="100%"
                                    app:layout_widthPercent="50%" />

                                <Spinner
                                    android:id="@+id/bixby_edit_wireless_action_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/bixby_edit_wireless_socket_spinner"
                                    app:layout_heightPercent="100%"
                                    app:layout_widthPercent="50%" />
                            </android.support.percent.PercentRelativeLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="4dp">

                        <LinearLayout
                            android:id="@+id/bixby_edit_requirements_main_linear_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="@string/bixby_create_requirements"
                                android:textColor="@color/PrimaryText" />

                            <com.rey.material.widget.FloatingActionButton
                                android:id="@+id/bixby_edit_requirements_add_button"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="end"
                                app:fab_iconSrc="@mipmap/ic_add_white_48dp"
                                app:rd_delayClick="none"
                                app:rd_enable="true"
                                app:rd_rippleColor="@color/colorPrimary"
                                app:rd_rippleType="touch" />

                            <LinearLayout
                                android:id="@+id/bixby_edit_requirements_linear_layout_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/bixby_edit_requirement_type_spinner_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <Spinner
                                    android:id="@+id/bixby_edit_puckjs_position_spinner_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <android.support.percent.PercentRelativeLayout
                                    android:id="@+id/bixby_edit_requirement_light_relative_layout_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp">

                                    <EditText
                                        android:id="@+id/bixby_edit_requirement_light_value_edit_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        app:layout_heightPercent="100%"
                                        app:layout_widthPercent="33%" />

                                    <EditText
                                        android:id="@+id/bixby_edit_requirement_light_tolerance_edit_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@+id/bixby_edit_requirement_light_value_edit_1"
                                        android:inputType="number"
                                        app:layout_heightPercent="100%"
                                        app:layout_widthPercent="33%" />

                                    <Spinner
                                        android:id="@+id/bixby_edit_requirement_light_compare_type_spinner_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@+id/bixby_edit_requirement_light_tolerance_edit_1"
                                        app:layout_heightPercent="100%"
                                        app:layout_widthPercent="33%" />
                                </android.support.percent.PercentRelativeLayout>

                                <android.support.percent.PercentRelativeLayout
                                    android:id="@+id/bixby_edit_requirement_network_relative_layout_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:orientation="vertical">

                                    <Spinner
                                        android:id="@+id/bixby_edit_requirement_network_type_spinner_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_heightPercent="50%"
                                        app:layout_widthPercent="50%" />

                                    <Spinner
                                        android:id="@+id/bixby_edit_requirement_network_state_spinner_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@+id/bixby_edit_requirement_network_type_spinner_1"
                                        app:layout_heightPercent="50%"
                                        app:layout_widthPercent="50%" />

                                    <EditText
                                        android:id="@+id/bixby_edit_requirement_network_ssid_edit_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/bixby_edit_requirement_network_type_spinner_1"
                                        app:layout_heightPercent="50%"
                                        app:layout_widthPercent="100%" />
                                </android.support.percent.PercentRelativeLayout>

                                <android.support.percent.PercentRelativeLayout
                                    android:id="@+id/bixby_edit_requirement_wireless_socket_relative_layout_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:orientation="vertical">

                                    <Spinner
                                        android:id="@+id/bixby_edit_requirement_wireless_socket_name_spinner_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_heightPercent="100%"
                                        app:layout_widthPercent="50%" />

                                    <Spinner
                                        android:id="@+id/bixby_edit_requirement_wireless_socket_state_spinner_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@+id/bixby_edit_requirement_wireless_socket_name_spinner_1"
                                        app:layout_heightPercent="100%"
                                        app:layout_widthPercent="50%" />
                                </android.support.percent.PercentRelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <com.rey.material.widget.Button
                    android:id="@+id/save_bixby_edit_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textColor="@color/colorTextIcon"
                    android:textStyle="bold"
                    app:rd_delayClick="none"
                    app:rd_enable="true"
                    app:rd_rippleColor="@color/colorPrimary"
                    app:rd_rippleType="touch" />
            </LinearLayout>
        </ScrollView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_bixby_edit"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>
