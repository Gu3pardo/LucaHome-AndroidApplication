<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="guepardoapps.lucahome.views.ScheduleEditActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            card_view:cardCornerRadius="5dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/scheduleName_TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/schedule_edit_name_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_schedule_name"
                            android:inputType="textAutoComplete"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/schedule_socket_select"
                            android:nextFocusRight="@+id/schedule_socket_select"
                            android:textColor="@color/TextIcon" />

                    </android.support.design.widget.TextInputLayout>

                    <Spinner
                        android:id="@+id/schedule_socket_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nextFocusDown="@+id/schedule_switch_select"
                        android:nextFocusRight="@+id/schedule_switch_select" />

                    <Spinner
                        android:id="@+id/schedule_switch_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nextFocusDown="@+id/schedule_weekday_select"
                        android:nextFocusRight="@+id/schedule_weekday_select" />

                    <Spinner
                        android:id="@+id/schedule_weekday_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nextFocusDown="@+id/schedule_timePicker"
                        android:nextFocusRight="@+id/schedule_timePicker" />

                    <TimePicker
                        android:id="@+id/schedule_timePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nextFocusDown="@+id/schedule_action_select"
                        android:nextFocusRight="@+id/schedule_action_select" />

                    <Spinner
                        android:id="@+id/schedule_action_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nextFocusDown="@+id/save_schedule_edit_button"
                        android:nextFocusRight="@+id/save_schedule_edit_button" />

                    <com.rey.material.widget.Button
                        android:id="@+id/save_schedule_edit_button"
                        style="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/save"
                        android:textColor="@color/colorTextIcon"
                        android:textStyle="bold"
                        app:rd_delayClick="none"
                        app:rd_enable="true"
                        app:rd_rippleColor="@color/colorPrimary"
                        app:rd_rippleType="touch" />

                </LinearLayout>
            </ScrollView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_schedule_edit"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
