<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/cardview_light_background"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/bixby_edit_requirements_main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <com.rey.material.widget.FloatingActionButton
                android:id="@+id/bixby_edit_requirement_remove_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                app:fab_iconSrc="@android:drawable/ic_menu_delete"
                app:rd_delayClick="none"
                app:rd_enable="true"
                app:rd_rippleColor="@color/colorPrimary"
                app:rd_rippleType="touch" />

            <LinearLayout
                android:id="@+id/bixby_edit_requirements_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/bixby_edit_requirement_type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/bixby_edit_puckjs_position_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/bixby_edit_requirement_light_relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <EditText
                        android:id="@+id/bixby_edit_requirement_light_value_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/light_requirement_value_edit_hint"
                        android:inputType="number"
                        android:textColor="@color/PrimaryText"
                        android:textColorHint="@color/SecondaryText"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="50%" />

                    <EditText
                        android:id="@+id/bixby_edit_requirement_light_tolerance_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/bixby_edit_requirement_light_value_edit"
                        android:hint="@string/light_requirement_tolerance_edit_hint"
                        android:inputType="number"
                        android:textColor="@color/PrimaryText"
                        android:textColorHint="@color/SecondaryText"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="50%" />

                    <Spinner
                        android:id="@+id/bixby_edit_requirement_light_compare_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bixby_edit_requirement_light_tolerance_edit"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="50%" />

                    <Spinner
                        android:id="@+id/bixby_edit_requirement_light_area_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bixby_edit_requirement_light_tolerance_edit"
                        android:layout_toEndOf="@+id/bixby_edit_requirement_light_compare_type_spinner"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="50%" />
                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/bixby_edit_requirement_network_relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/bixby_edit_requirement_network_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="50%" />

                    <Spinner
                        android:id="@+id/bixby_edit_requirement_network_state_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/bixby_edit_requirement_network_type_spinner"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="50%" />

                    <EditText
                        android:id="@+id/bixby_edit_requirement_network_ssid_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bixby_edit_requirement_network_type_spinner"
                        android:hint="@string/network_requirement_ssid_edit_hint"
                        android:textColor="@color/PrimaryText"
                        android:textColorHint="@color/SecondaryText"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="100%" />
                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/bixby_edit_requirement_wireless_socket_relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/bixby_edit_requirement_wireless_socket_name_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_heightPercent="100%"
                        app:layout_widthPercent="50%" />

                    <Spinner
                        android:id="@+id/bixby_edit_requirement_wireless_socket_state_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/bixby_edit_requirement_wireless_socket_name_spinner"
                        app:layout_heightPercent="100%"
                        app:layout_widthPercent="50%" />
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
