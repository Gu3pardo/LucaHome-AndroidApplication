<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="guepardoapps.lucahome.views.MeterDataEditActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            card_view:cardCornerRadius="4dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="5dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/meterDataType_TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true">

                        <AutoCompleteTextView
                            android:id="@+id/meterdata_edit_type_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_meterdata_type"
                            android:inputType="textAutoComplete"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/meterdata_edit_meterid_textview"
                            android:nextFocusRight="@+id/meterdata_edit_meterid_textview"
                            android:textColor="@color/TextIcon" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/meterDataMeterId_TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/meterDataType_TextInputLayout">

                        <AutoCompleteTextView
                            android:id="@+id/meterdata_edit_meterid_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_meterdata_meterid"
                            android:inputType="textAutoComplete"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/meterdata_edit_area_textview"
                            android:nextFocusRight="@+id/meterdata_edit_area_textview"
                            android:textColor="@color/TextIcon" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/meterDataArea_TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/meterDataMeterId_TextInputLayout">

                        <AutoCompleteTextView
                            android:id="@+id/meterdata_edit_area_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_meterdata_area"
                            android:inputType="textAutoComplete"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/meterdata_edit_imagename_textview"
                            android:nextFocusRight="@+id/meterdata_edit_imagename_textview"
                            android:textColor="@color/TextIcon" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/meterDataImageName_TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/meterDataArea_TextInputLayout">

                        <AutoCompleteTextView
                            android:id="@+id/meterdata_edit_imagename_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_meterdata_imagename"
                            android:inputType="textAutoComplete"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/meterdata_edit_value_textview"
                            android:nextFocusRight="@+id/meterdata_edit_value_textview"
                            android:textColor="@color/TextIcon" />

                    </android.support.design.widget.TextInputLayout>

                    <EditText
                        android:id="@+id/meterdata_edit_value_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/meterDataImageName_TextInputLayout"
                        android:layout_marginTop="12dp"
                        android:hint="@string/prompt_meterdata_value"
                        android:inputType="numberDecimal"
                        android:nextFocusDown="@+id/meterdata_edit_datepicker"
                        android:nextFocusRight="@+id/meterdata_edit_datepicker"
                        android:textColor="@color/TextIcon" />

                    <DatePicker
                        android:id="@+id/meterdata_edit_datepicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/meterdata_edit_value_textview"
                        android:layout_centerHorizontal="true"
                        android:nextFocusDown="@+id/meterdata_edit_timepicker"
                        android:nextFocusRight="@+id/meterdata_edit_timepicker" />

                    <TimePicker
                        android:id="@+id/meterdata_edit_timepicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/meterdata_edit_datepicker"
                        android:layout_centerHorizontal="true"
                        android:nextFocusDown="@+id/save_menu_edit_button"
                        android:nextFocusRight="@+id/save_menu_edit_button" />

                    <com.rey.material.widget.Button
                        android:id="@+id/save_meterdata_edit_button"
                        style="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/meterdata_edit_timepicker"
                        android:layout_marginTop="12dp"
                        android:text="@string/save"
                        android:textColor="@color/colorTextIcon"
                        android:textStyle="bold"
                        app:rd_delayClick="none"
                        app:rd_enable="true"
                        app:rd_rippleColor="@color/colorPrimary"
                        app:rd_rippleType="touch" />

                </RelativeLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_meterdata_edit"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
