<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="guepardoapps.lucahome.views.SecurityActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/cardview_light_background"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/motionStateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/webViewCamera"
                android:layout_alignBottom="@+id/webViewCamera"
                android:layout_centerHorizontal="true"
                android:text="Motion not active"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/SecondaryText"
                android:textStyle="bold"
                android:visibility="gone" />

            <WebView
                android:id="@+id/webViewCamera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/viewCenter"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <View
                android:id="@+id/viewCenter"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <ListView
                android:id="@+id/motionActionsListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/buttonMotionHandle"
                android:layout_below="@+id/webViewCamera"
                android:layout_margin="5dp"
                android:visibility="invisible" />

            <com.rey.material.widget.Button
                android:id="@+id/buttonMotionHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonSetMotionControl"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="Activate motion" />

            <com.rey.material.widget.Button
                android:id="@+id/buttonSetMotionControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:enabled="false"
                android:text="Activate motion control"
                android:visibility="invisible" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
