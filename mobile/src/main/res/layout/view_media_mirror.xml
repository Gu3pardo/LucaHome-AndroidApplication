<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TextIcon">

    <LinearLayout
        android:id="@+id/topMediaMirrorLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/DarkPrimary"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/mediaMirrorSelectionSpinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/youtubeMediaMirrorLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topMediaMirrorLinearLayout"
        android:layout_margin="10dp"
        android:background="@color/DarkPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/youtubeVideoImageView"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/youtube_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/youtubeIdTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@xml/button_blank_white"
                        android:clickable="true"
                        android:onClick="SelectedYoutubeId"
                        android:padding="3dp"
                        android:text="@string/exampleYoutubeId"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/TextIcon"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">

                        <ImageButton
                            android:id="@+id/imageButtonVideoPlay"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="5dp"
                            android:background="@xml/button_blank_white"
                            android:contentDescription="@string/contentDescription"
                            android:src="@android:drawable/ic_media_play" />

                        <ImageButton
                            android:id="@+id/imageButtonVideoPause"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="5dp"
                            android:background="@xml/button_blank_white"
                            android:contentDescription="@string/contentDescription"
                            android:src="@android:drawable/ic_media_pause" />

                        <ImageButton
                            android:id="@+id/imageButtonVideoStop"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@xml/button_blank_white"
                            android:contentDescription="@string/contentDescription"
                            android:src="@android:drawable/editbox_dropdown_light_frame" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/TextIcon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/volumeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/exampleVolume"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/TextIcon"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonVolumeIncrease"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@xml/button_blank_white"
                    android:text="@string/plus"
                    android:textColor="@color/TextIcon" />

                <Button
                    android:id="@+id/buttonVolumeDecrease"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@xml/button_blank_white"
                    android:text="@string/minus"
                    android:textColor="@color/TextIcon" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/TextIcon" />

        <SeekBar
            android:id="@+id/seekBarYoutubeDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:max="100" />

        <TextView
            android:id="@+id/youtubeVideoTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:gravity="end"
            android:padding="5dp"
            android:text="@string/examplePlayTime"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/TextIcon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/TextIcon" />

        <TextView
            android:id="@+id/sleepTimerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:gravity="end"
            android:padding="5dp"
            android:text="@string/exampleSleepTimer"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/TextIcon"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMediaMirrorRelativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/youtubeMediaMirrorLinearLayout"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/DarkPrimary"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/Primary"
                android:padding="3dp">

                <TextView
                    android:id="@+id/textViewRSS"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/imageButtonShowRSS"
                    android:text="@string/rss"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButtonShowRSS"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="3dp"
                    android:background="@xml/button_blank_white"
                    android:contentDescription="@string/contentDescription"
                    android:src="@android:drawable/arrow_down_float" />

                <TextView
                    android:id="@+id/dividerRSS"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textViewRSS"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/TextIcon"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/rssSelectionSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dividerRSS"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/TextIcon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/Primary"
                android:padding="3dp">

                <TextView
                    android:id="@+id/textViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/imageButtonShowText"
                    android:text="@string/text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButtonShowText"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="3dp"
                    android:background="@xml/button_blank_white"
                    android:contentDescription="@string/contentDescription"
                    android:src="@android:drawable/arrow_down_float" />

                <TextView
                    android:id="@+id/dividerText"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textViewText"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/TextIcon"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editTextSendText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/dividerText"
                    android:layout_toStartOf="@+id/buttonSendText"
                    android:ems="10"
                    android:textColor="@color/TextIcon"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonSendText"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/dividerText"
                    android:background="@xml/button_blank_white"
                    android:text="@string/send"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/TextIcon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/Primary"
                android:padding="3dp">

                <TextView
                    android:id="@+id/textViewWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/imageButtonShowWebsite"
                    android:text="@string/website"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButtonShowWebsite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="3dp"
                    android:background="@xml/button_blank_white"
                    android:contentDescription="@string/contentDescription"
                    android:src="@android:drawable/arrow_down_float" />

                <TextView
                    android:id="@+id/dividerWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textViewWebsite"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/TextIcon"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editTextSendWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/dividerWebsite"
                    android:layout_toStartOf="@+id/buttonSendWebsite"
                    android:ems="10"
                    android:textColor="@color/TextIcon"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonSendWebsite"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/dividerWebsite"
                    android:background="@xml/button_blank_white"
                    android:text="@string/send"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/TextIcon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/Primary"
                android:padding="3dp">

                <TextView
                    android:id="@+id/textViewScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/textViewBrightnessPercent"
                    android:text="@string/screen"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewBrightnessPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/exampleBrightness"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButtonShowScreen"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="3dp"
                    android:background="@xml/button_blank_white"
                    android:contentDescription="@string/contentDescription"
                    android:src="@android:drawable/arrow_down_float" />

                <TextView
                    android:id="@+id/dividerScreen"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textViewScreen"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/TextIcon"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/brightnessLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/dividerScreen"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/buttonScreenBrightnessIncrease"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:background="@xml/button_blank_white"
                        android:text="@string/plus"
                        android:textColor="@color/TextIcon" />

                    <Button
                        android:id="@+id/buttonScreenBrightnessDecrease"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@xml/button_blank_white"
                        android:text="@string/minus"
                        android:textColor="@color/TextIcon" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/TextIcon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/Primary"
                android:padding="3dp">

                <TextView
                    android:id="@+id/textViewUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/imageButtonShowUpdate"
                    android:text="@string/update"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButtonShowUpdate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="3dp"
                    android:background="@xml/button_blank_white"
                    android:contentDescription="@string/contentDescription"
                    android:src="@android:drawable/arrow_down_float" />

                <TextView
                    android:id="@+id/dividerUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textViewUpdate"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/TextIcon"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/linearLayoutUpdateI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/dividerUpdate"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/buttonUpdateCurrentWeather"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:background="@xml/button_blank_white"
                        android:padding="5dp"
                        android:text="@string/weather"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/TextIcon" />

                    <Button
                        android:id="@+id/buttonUpdateForecastWeather"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:background="@xml/button_blank_white"
                        android:padding="5dp"
                        android:text="@string/forecast"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/TextIcon" />

                    <Button
                        android:id="@+id/buttonUpdateRaspberryTemperature"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@xml/button_blank_white"
                        android:padding="5dp"
                        android:text="@string/temperature"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/TextIcon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutUpdateII"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayoutUpdateI"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/buttonUpdateIp"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:background="@xml/button_blank_white"
                        android:padding="5dp"
                        android:text="@string/ip"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/TextIcon" />

                    <Button
                        android:id="@+id/buttonUpdateBirthdays"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:background="@xml/button_blank_white"
                        android:padding="5dp"
                        android:text="@string/birthdays"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/TextIcon" />

                    <Button
                        android:id="@+id/buttonUpdateCalendar"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@xml/button_blank_white"
                        android:padding="5dp"
                        android:text="@string/calendar"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/TextIcon" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/TextIcon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/Primary"
                android:padding="3dp">

                <TextView
                    android:id="@+id/textViewAdvanced"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/imageButtonShowAdvanced"
                    android:text="@string/advanced"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/TextIcon"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButtonShowAdvanced"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="3dp"
                    android:background="@xml/button_blank_white"
                    android:contentDescription="@string/contentDescription"
                    android:src="@android:drawable/arrow_down_float" />

                <TextView
                    android:id="@+id/dividerAdvanced"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textViewAdvanced"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/TextIcon"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/advancedLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/dividerAdvanced"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/buttonReboot"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:background="@xml/button_blank_white"
                        android:padding="5dp"
                        android:text="@string/reboot"
                        android:textColor="@color/TextIcon" />

                    <Button
                        android:id="@+id/buttonShutdown"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@xml/button_blank_white"
                        android:padding="5dp"
                        android:text="@string/shutdown"
                        android:textColor="@color/TextIcon" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomMediaMirrorRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@color/DarkPrimary"
        android:padding="3dp">

        <ImageView
            android:id="@+id/batteryImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/battery" />

        <TextView
            android:id="@+id/mediaMirrorBatteryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/batteryImage"
            android:text="@string/exampleBattery"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/TextIcon" />

        <Switch
            android:id="@+id/mediaMirrorSocketSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/mediaMirrorBatteryTextView"
            android:textOff="@string/off"
            android:textOn="@string/on"
            android:thumb="@xml/customswitchselector"
            android:track="@xml/custom_track" />

        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/mediaMirrorSocketSwitch"
            android:gravity="end"
            android:padding="5dp"
            android:text="@string/exampleVersion"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/TextIcon"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>