<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <SwitchPreference
        android:defaultValue="false"
        android:key="handle_bluetooth_automatically"
        android:title="@string/pref_title_handle_bluetooth_automatically" />

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <SwitchPreference
        android:defaultValue="false"
        android:key="beacons_scan_enabled"
        android:title="@string/pref_title_beacons_scan_enabled" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@integer/pref_default_positioning_between_scan_time_sec"
        android:dependency="beacons_scan_enabled"
        android:inputType="numberDecimal"
        android:key="beacons_time_between_scans_sec"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_time_between_scans_sec" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@integer/pref_default_positioning_scan_time_msec"
        android:dependency="beacons_scan_enabled"
        android:inputType="numberDecimal"
        android:key="beacons_time_scans_msec"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_time_scans_msec" />

</PreferenceScreen>
