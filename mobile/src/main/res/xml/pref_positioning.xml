<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="reload_position_enabled"
        android:title="@string/pref_title_reload_positioning" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@integer/pref_default_positioning_timeout_sec"
        android:dependency="reload_position_enabled"
        android:inputType="numberDecimal"
        android:key="reload_position_timeout_sec"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_reload_positioning_timeout_sec" />

</PreferenceScreen>
