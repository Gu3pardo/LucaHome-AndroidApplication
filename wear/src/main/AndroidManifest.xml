<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="guepardoapps.lucahome">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <activity
            android:name="guepardoapps.lucahome.views.MainView"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="guepardoapps.lucahome.views.BirthdayView" />
        <activity android:name="guepardoapps.lucahome.views.MediaMirrorView" />
        <activity android:name="guepardoapps.lucahome.views.MenuView" />
        <activity android:name="guepardoapps.lucahome.views.ScheduleView" />
        <activity android:name="guepardoapps.lucahome.views.ShoppingListView" />
        <activity android:name="guepardoapps.lucahome.views.SocketView" />
        <activity android:name="guepardoapps.lucahome.views.TimerView" />

        <service
            android:name="guepardoapps.lucahome.services.PhoneMessageService"
            android:enabled="true" />
        <service
            android:name="guepardoapps.lucahome.services.WatchFaceService"
            android:label="@string/my_analog_name"
            android:permission="android.permission.BIND_WALLPAPER">
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@layout/watch_face" />
            <meta-data
                android:name="com.google.android.wearable.watchface.preview"
                android:resource="@drawable/screenshot" />
            <meta-data
                android:name="com.google.android.wearable.watchface.preview_circular"
                android:resource="@drawable/screenshot" />

            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />

                <category android:name="com.google.android.wearable.watchface.category.WATCH_FACE" />
            </intent-filter>
        </service>
        <service android:name="guepardoapps.lucahome.services.WearMessageListenerService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
