<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:background="@color/cardview_shadow_start_color"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:background="@color/cardview_light_background"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wirelessSocketCardTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/example"
                    android:textColor="@color/TextIcon"
                    android:textSize="16sp" />

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/wirelessSocketCardImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/contentDescription"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="25%"
                        app:srcCompat="@drawable/main_image_wireless_sockets" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/wirelessSocketCardImage"
                        android:orientation="vertical"
                        app:layout_heightPercent="100%"
                        app:layout_widthPercent="50%">

                        <TextView
                            android:id="@+id/wirelessSocketCardAreaText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/example" />

                        <TextView
                            android:id="@+id/wirelessSocketCardCodeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/example" />

                        <Switch
                            android:id="@+id/wirelessSocketCardSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textOff="@string/disabled"
                            android:textOn="@string/enabled" />
                    </LinearLayout>
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/wirelessSocketCardStateView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top|start"
                android:layout_margin="5dp"
                android:background="@drawable/xml_circle_blue" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>