        android:textStyle="bold" />

    <ImageView
        android:id="@+id/weatherForecast4Condition"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/weatherForecast4TemperatureRange"
        android:layout_alignTop="@+id/weatherForecast4TemperatureRange"
