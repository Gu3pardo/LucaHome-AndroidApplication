        android:id="@+id/weatherForecast5TemperatureRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/weatherForecast4TemperatureRange"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="@string/temperatureRangeText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/ThirdText"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/temperatureRaspberry"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/weatherConditionImageView"
        android:layout_below="@+id/weatherPressureTextView"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:contentDescription="@string/contentDescription"
        android:focusable="true"
        android:onClick="ShowTemperatureGraph"
        android:src="@drawable/temperature_icon" />

    <View
        android:id="@+id/temperatureRaspberryAlarm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/temperatureRaspberry"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/temperatureRaspberry"
        android:background="@xml/circle_green"
        android:clickable="true"
        android:focusable="true"
        android:onClick="ShowTemperatureGraph" />

    <TextView
        android:id="@+id/temperatureRaspberryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/temperatureRaspberry"
        android:layout_alignTop="@+id/temperatureRaspberry"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/temperatureRaspberryAlarm"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:onClick="ShowTemperatureGraph"
        android:text="@string/raspberryText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/PrimaryText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/temperatureRaspberryValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/temperatureRaspberry"
        android:layout_alignTop="@+id/temperatureRaspberry"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/temperatureRaspberryName"
