        android:id="@+id/weekdayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateTextView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_toStartOf="@+id/centerView"
        android:text="@string/weekdayText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/PrimaryText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timeTextView"
        android:layout_alignStart="@+id/weekdayTextView"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/centerView"
        android:text="@string/dateText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/PrimaryText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomButtonLinearLayout"
        android:layout_alignStart="@+id/dateTextView"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/centerView"
        android:text="@string/timeText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/PrimaryText"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/calendarLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/birthdayLinearLayout"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/centerView"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calendar1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calendarText"
                android:textAlignment="textEnd"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/PrimaryText" />

            <View
                android:id="@+id/calendar1AlarmView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:background="@xml/circle_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calendar2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calendarText"
                android:textAlignment="textEnd"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/PrimaryText" />

            <View
                android:id="@+id/calendar2AlarmView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:background="@xml/circle_red" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/birthdayLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomButtonLinearLayout"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/centerView"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/birthdayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthdayText"
            android:textAlignment="textEnd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/PrimaryText" />

        <View
            android:id="@+id/birthdayAlarmView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:background="@xml/circle_red" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomButtonLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomInfoLinearLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/floating_action_button_menu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            app:fab_iconSize="30dp"
            app:fab_iconSrc="@drawable/menu"
            app:fab_radius="17dp"
            app:rd_backgroundColor="@color/colorPrimaryDark"
            app:rd_delayClick="none"
            app:rd_enable="true"
            app:rd_rippleColor="@color/colorPrimary"
            app:rd_rippleType="touch" />

        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/floating_action_button_shopping"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            app:fab_iconSize="25dp"
            app:fab_iconSrc="@drawable/shopping"
            app:fab_radius="17dp"
            app:rd_backgroundColor="@color/colorPrimaryDark"
            app:rd_delayClick="none"
            app:rd_enable="true"
            app:rd_rippleColor="@color/colorPrimary"
            app:rd_rippleType="touch" />

        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/floating_action_button_socket"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            app:fab_iconSize="25dp"
            app:fab_iconSrc="@drawable/socket"
            app:fab_radius="17dp"
            app:rd_backgroundColor="@color/colorPrimaryDark"
            app:rd_delayClick="none"
            app:rd_enable="true"
            app:rd_rippleColor="@color/colorPrimary"
            app:rd_rippleType="touch" />

        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/floating_action_button_switch"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            app:fab_iconSize="25dp"
            app:fab_iconSrc="@drawable/wirelessswitch"
            app:fab_radius="17dp"
            app:rd_backgroundColor="@color/colorPrimaryDark"
            app:rd_delayClick="none"
            app:rd_enable="true"
            app:rd_rippleColor="@color/colorPrimary"
            app:rd_rippleType="touch" />

        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/floating_action_button_reload"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            app:fab_iconSize="25dp"
            app:fab_iconSrc="@android:drawable/ic_menu_rotate"
            app:fab_radius="17dp"
            app:rd_backgroundColor="@color/colorPrimaryDark"
            app:rd_delayClick="none"
            app:rd_enable="true"
            app:rd_rippleColor="@color/colorPrimary"
            app:rd_rippleType="touch" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomInfoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/batteryAlarmView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@xml/circle_green" />

        <TextView
            android:id="@+id/batteryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/batteryText"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/PrimaryText" />

        <TextView
            android:id="@+id/ipAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/ipAddressText"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/PrimaryText" />

        <TextView
            android:id="@+id/serverVersionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/serverVersion"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/PrimaryText" />

        <TextView
            android:id="@+id/volumeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/volumeText"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/PrimaryText" />

        <TextView
            android:id="@+id/currentPlayingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/example"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/PrimaryText" />
    </LinearLayout>

</RelativeLayout>