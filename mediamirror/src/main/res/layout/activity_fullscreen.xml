        android:focusable="true"
        android:gravity="center_vertical"
        android:onClick="ShowTemperatureGraph"
        android:text="@string/temperatureText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/PrimaryText"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rssRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/temperatureRaspberry"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/rssTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/PrimaryText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rssSeparatorTextView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignEnd="@+id/rssTitleTextView"
            android:layout_alignStart="@+id/rssTitleTextView"
            android:layout_below="@+id/rssTitleTextView"
            android:textColor="@color/PrimaryText" />

        <TextView
            android:id="@+id/rssTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssSeparatorTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/PrimaryText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rssDescriptionTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssTextView1"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/SecondaryText" />

        <TextView
            android:id="@+id/rssTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssDescriptionTextView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/PrimaryText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rssDescriptionTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssTextView2"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/SecondaryText" />

        <TextView
            android:id="@+id/rssTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssDescriptionTextView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium"
