        android:id="@+id/weatherForecast4TemperatureRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/weatherForecast3TemperatureRange"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="@string/temperatureRangeText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/SecondaryText"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/weatherForecast5Condition"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/weatherForecast5TemperatureRange"
        android:layout_alignTop="@+id/weatherForecast5TemperatureRange"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/weatherForecast5Weekday"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/weather_icon" />

    <TextView
        android:id="@+id/weatherForecast5Weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast5TemperatureRange"
        android:layout_alignTop="@+id/weatherForecast5TemperatureRange"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/weatherForecast5Date"
        android:gravity="center_vertical"
        android:text="@string/weekdayText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/ThirdText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherForecast5Date"
        android:layout_width="wrap_content"
