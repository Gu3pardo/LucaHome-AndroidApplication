<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/shape_rounded"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_map_schedule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/TextIcon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:background="@color/TextIcon" />

    <TextView
        android:id="@+id/dialog_map_schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/time_example"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/TextIcon"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_map_schedule_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/time_example"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/TextIcon"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_map_schedule_socket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/time_example"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/TextIcon"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_map_schedule_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/time_example"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/TextIcon"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_map_schedule_playsound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/time_example"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/TextIcon"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dialog_map_schedule_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@xml/selector_state"
        android:text="@string/active"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/TextIcon"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dialog_map_schedule_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@xml/selector_state"
        android:text="@string/delete"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/TextIcon"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dialog_map_schedule_button_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@xml/button_blank_white"
        android:text="@string/close"
        android:textColor="@color/TextIcon" />

</LinearLayout>